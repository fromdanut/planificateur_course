{# src/PC/PlatformBundle/Resources/views/Recipe/index.html.twig #}

{% extends "PCPlatformBundle::layout.html.twig" %}

{% block pcplatform_article %}

    <div class="row">
        <div class="row">
            <div class="col-xs-12">
                {% block article_title %}
                    <h1 class="text-center">Liste des recettes</h1>
                {% endblock %}
            </div>
        </div>
        <div class="col-xs-3">
            {% block left_menu %}
                {% include 'PCPlatformBundle:Recipe:formSearch.html.twig' %}
            {% endblock %}
        </div>
        <div class="col-xs-9">
            <div class="row">
                {% for recipe in recipes %}
                    <div class="col-xs-12 col-sm-6 col-md-4">
                    {% include 'PCPlatformBundle:Recipe:widget_small_recipe.html.twig' %}
                    </div>
                {% endfor %}
                {# Information s'il n'y a pas de recette #}
                {% if recipes is empty %}
                <div id="header" class="jumbotron">
                    <h1>Oups : aucune recette ne correspond <small> modifiez vos filtres !</small></h1>
                    </div>
                </div>
                {% endif %}
            </div>

            <div class="row">
                <div class="col-xs-6 col-sm-2 col-xs-push-3 col-sm-push-5">
                    {% block add_button %}
                        <a href="{{path('pc_platform_add')}}" class="btn btn-primary"><span class="glyphicon glyphicon-pencil"></span> Ecrire une nouvelle recette</a>
                    {% endblock %}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
