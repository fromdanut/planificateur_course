{# src/PC/PlatformBundle/Resources/views/Recipe/view_menu.html.twig #}


{# SUGGESTION #}
<div class="row" style="margin-top:10px">
    <div class="col-xs-10 col-xs-push-1">
        <h4>Voir également...</h4>
        {% for recipe in suggestions %}
            <div class="row style="margin-top:10px"">
                <div class="col-xs-12">
                    {% include 'PCPlatformBundle:Recipe:widget_small_recipe.html.twig' %}
                </div>
            </div>
        {% endfor %}
    </div>
</div>

{# Liste de boutons #}

{# Retour à la liste #}
<div class="row" style="margin-top:10px">
    <div class="col-xs-12">
        <a href="{{path('pc_platform_recipe_index')}}" class="btn btn-block btn-primary">
            <span class="glyphicon glyphicon-th-large">
            </span> retour à la liste des recettes
        </a>
    </div>
</div>

{# Ajouter à la shoppingList #}
<div class="row" style="margin-top:10px">
    <div class="col-xs-12">
        <a href="{{path('pc_platform_shoppinglist_add_recipe', {'id': recipe.id})}}" class="btn btn-block btn-success">
            <span class="glyphicon glyphicon-plus-sign">
            </span> Ajouter à votre ShoppingList
        </a>
    </div>
</div>

{# Enlever à la shoppingList #}
<div class="row" style="margin-top:10px">
    <div class="col-xs-12">
        <a href="{{path('pc_platform_shoppinglist_remove_recipe', {'id': recipe.id})}}" class="btn btn-block btn-warning">
            <span class="glyphicon glyphicon-minus-sign">
            </span> Enlever de votre ShoppingList
        </a>
    </div>
</div>

{# edit et delete accessible seulement pour l'auteur de la recette #}
{% if app.user.username == recipe.user.username %}
<div class="row" style="margin-top:10px">
    <div class="col-xs-12">
        <a href="{{path('pc_platform_edit', {'id': recipe.id})}}" class="btn btn-block btn-primary btn-warning">
            <span class="glyphicon glyphicon-pencil">
            </span>  modifier
        </a>
    </div>
</div>

<div class="row" style="margin-top:10px">
    <div class="col-xs-12">
        <a href="{{path('pc_platform_delete', {'id': recipe.id})}}" class="btn btn-block btn-primary btn-danger">
            <span class="glyphicon glyphicon-minus-sign">
            </span>  supprimer
        </a>
    </div>
</div>
{% endif %}
